<h2>Upcoming events: </h2>
<% @events.upcoming.each do |event| %>
  <p>Date: <%= event.date %></p>
  <p>Location: <%= event.location %></p>

  <p><%= link_to "Details", event_path(event) %></p>
  <% if user_signed_in? %>
    <%= button_to "Attendee", attendee_events_path(event_id: event.id, :method => :post) %>
  <% end %>
<% end %>


<h2>Past events: </h2>
<% @events.past.each do |event| %>
  <p>Date: <%= event.date %></p>
  <p>Location: <%= event.location %></p>

<% end %>
