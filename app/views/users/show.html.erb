<h1>User Events: </h1>
<% @user.created_events.each do |event| %>
  <p>Date: <%= event.date %></p>
  <p>Location: <%= event.location %></p>

  <% if @user == event.creator%>
    <%= button_to "Delete Event", {:controller => :events, :action => :destroy, :id => event.id}, method: :delete %>
  <% end %>
<% end %>

<h3>Upcoming Events: <%= @user.attendes.where('date >= ?', Date.today).count %></h3>

<h3>User Attendee Events: <%= @user.attendes.count %></h3>

<h3>Past Events: <%= @user.attendes.where('date < ?', Date.today).count %></h3>


<%= link_to "New Event", new_event_path %>